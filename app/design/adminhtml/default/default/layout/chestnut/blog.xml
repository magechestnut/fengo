<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addCss">
                <name>chestnut/blog/css/style.css</name>
            </action>
        </reference>
    </default>
    <blog_adminhtml_post_index>
        <update handle="editor" />
        <reference name="content">
            <block type="blog/adminhtml_post" name="post" />
        </reference>
    </blog_adminhtml_post_index>
    <blog_adminhtml_post_edit>
        <update handle="editor" />
    </blog_adminhtml_post_edit>	
    <blog_adminhtml_post_new>
        <update handle="editor" />
    </blog_adminhtml_post_new>		
    <blog_adminhtml_comment_index>
        <reference name="content">
            <block type="blog/adminhtml_comment" name="comment" />
        </reference>
    </blog_adminhtml_comment_index>
    <blog_adminhtml_category_index>
        <reference name="content">
            <block type="blog/adminhtml_category" name="category" />
        </reference>
    </blog_adminhtml_category_index>
</layout>
