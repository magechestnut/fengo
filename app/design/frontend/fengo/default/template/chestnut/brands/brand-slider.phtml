    $title = ($this->getBlockName()) ? $this->getBlockName() : $this->getAttributeTitle();
?>
<?php if ($brands && $enabled): ?>
<div class="brand-slider-section">
    <h3 class="brands-title"><?php echo strtoupper($title); ?></h3>
    <div class="brand-slider-wrapper">
        <div id="brands-slider" class="brands-slider top-right-nav">
        <?php foreach ($brands as $brand): ?>
            <div class="item">
                <a href="<?php echo $this->getBrandPageUrl($brand); ?>" title="<?php echo $this->__('Click to see more products from %s', $brand); ?>"><img src="<?php echo $this->getBrandImageUrl($brand); ?>" alt="<?php echo $brand; ?>" /></a>
            </div>
        <?php endforeach; ?>
        </div>
    </div>
</div>
<?php endif; ?>
