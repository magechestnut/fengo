<form id="search_mini_form_new" action="<?php echo $catalogSearchHelper->getResultUrl() ?>" method="get">
    <div class="form-search-new clearfix">
        <input id="search_new" type="text" name="<?php echo $catalogSearchHelper->getQueryParamName() ?>" value="<?php echo $catalogSearchHelper->getEscapedQueryText() ?>" class="input-text" maxlength="<?php echo $catalogSearchHelper->getMaxQueryLength();?>" />
